datasource db {
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
    provider  = "postgresql"
}

generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["native", "rhel-openssl-1.0.x"]
    output        = "../node_modules/.prisma/client"
}

model Profile {
    id        Int       @id @default(autoincrement())
    userEmail String    @unique
    firstName String?
    lastName  String?
    biography String?
    birthDay  DateTime?

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model MedicalSpeciality {
    id          Int                    @id @default(autoincrement())
    name        String
    description String
    subspecs    MedicalSubSpeciality[]
    createdAt   DateTime               @default(now())
    updatedAt   DateTime               @updatedAt
}

model MedicalSubSpeciality {
    id                  Int               @id @default(autoincrement())
    name                String
    description         String
    createdAt           DateTime          @default(now())
    updatedAt           DateTime          @updatedAt
    medicalSpeciality   MedicalSpeciality @relation(fields: [medicalSpecialityId], references: [id])
    medicalSpecialityId Int
}
